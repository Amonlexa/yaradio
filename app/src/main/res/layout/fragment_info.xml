<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btnInfoRadio"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#FFAB00"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="О радио якутии"
        android:background="@drawable/item_circle_15"/>


    <Button
        android:id="@+id/btnInfoApp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#FFAB00"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="О приложении"
        android:background="@drawable/item_circle_15"/>


    <Button
        android:id="@+id/btnCallDev"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#FFAB00"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="Обратная связь с разработчиков"
        android:background="@drawable/item_circle_15"/>




</LinearLayout>